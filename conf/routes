# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                           controllers.Application.index

POST    /goals/add                                  controllers.Application.addGoal

POST    /themes/add                                 controllers.Application.addTheme

GET     /goals/get/:id                              controllers.Application.getGoal(id)

GET     /themes/get/:id                              controllers.Application.getTheme(id)

GET     /connect/:id1/:relationship/:id2            controllers.Application.connect(id1, relationship, id2)

GET     /delete/:id                                 controllers.Application.delete(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
