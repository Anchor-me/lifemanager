# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                           controllers.Application.index

POST    /goals/add                                  controllers.Application.add(spokeName: String = "Goal")
POST    /themes/add                                 controllers.Application.add(spokeName: String = "Theme")

GET     /goals/get/:id                              controllers.Application.get(id, spokeName: String = "Goal")
GET     /themes/get/:id                             controllers.Application.get(id, spokeName: String = "Theme")

GET     /connect/:id1/:relationship/:id2            controllers.Application.connect(id1, relationship, id2)

GET     /delete/:id                                 controllers.Application.delete(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
